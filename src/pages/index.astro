---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ParticleBackground from "../components/ParticleBackground.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <ParticleBackground />
    <Header />
    <main>
      <section class="hero">
        <div class="hero-content">
          <h1 class="hero-title">佐橋優人</h1>
          <p class="hero-subtitle">
            Software Engineer | NLP Researcher | Graduate Student
          </p>
          <div class="hero-actions">
            <a href="/about" class="btn btn-primary">About Me</a>
            <a href="https://github.com/nharu-0630" class="btn btn-secondary"
              >Works</a
            >
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero {
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-title {
    font-size: 4rem;
    background: linear-gradient(45deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: rgba(100, 116, 139, 0.85);
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(2px);
    background: rgba(255, 255, 255, 0.1);
    z-index: 10;
  }

  .btn-primary {
    background: linear-gradient(
      45deg,
      rgba(102, 126, 234, 0.9),
      rgba(118, 75, 162, 0.9)
    );
    color: white;
  }

  .btn-primary:hover {
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
  }

  .btn-secondary {
    border: 2px solid rgba(102, 126, 234, 0.7);
    color: rgba(102, 126, 234, 0.9);
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
  }
</style>
